---
import { CldImage } from "astro-cloudinary";

const galleryImages = [
  {
    public_id: "bromo-jeep",
    width: 800,
    height: 800,
    alt: "Exciting jeep ride adventure at Mount Bromo",
  },
  {
    public_id: "bromogroup1",
    width: 800,
    height: 800,
    alt: "Misty morning at Mount Bromo",
  },
  {
    public_id: "bromogroup2",
    width: 800,
    height: 800,
    alt: "Group tourists enjoying Kawah Bromo",
  },
  {
    public_id: "ijen1",
    width: 800,
    height: 800,
    alt: "Breathtaking turquoise sulfur lake at Ijen crater with morning mist",
  },
  {
    public_id: "ijengroup",
    width: 800,
    height: 800,
    alt: "Breathtaking sunrise over Mount Bromo",
  },
  {
    public_id: "ijen2",
    width: 800,
    height: 800,
    alt: "Mystical blue flames through misty clouds at Ijen crater",
  },
  {
    public_id: "sewu1",
    width: 800,
    height: 800,
    alt: "Happy tour group exploring East Java",
  },
  {
    public_id: "borobudur",
    width: 800,
    height: 800,
    alt: "Experiencing local Indonesian culture",
  },
  {
    public_id: "balibeach",
    width: 800,
    height: 800,
    alt: "Tranquil black sand beach at Lovina, Bali",
  },
];
---

<section id="gallery" class="py-20 bg-[#F9F9F9]">
  <div class="container mx-auto px-4">
    <div class="text-center mb-10 sm:mb-12 md:mb-16 lg:mb-20">
      <p
        class="inline-block px-3 py-1 text-[#20513F] font-light mb-2 sm:mb-3 border border-[#20513F] rounded-full"
      >
        Tour Highlights
      </p>
      <h2 class="text-4xl md:text-5xl font-semibold mb-3 sm:mb-4">
        Our Gallery
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        See the stunning views and best moments from our trips across Bromo,
        East Java, Yogyakarta, and Bali.
      </p>
    </div>

    <!-- Gallery Grid - 3x3 on desktop -->
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-12">
        {
          galleryImages.map((image) => (
            <div class="overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 aspect-square">
              <div class="relative h-full w-full overflow-hidden group">
                <CldImage
                  src={image.public_id}
                  width={image.width}
                  height={image.height}
                  alt={image.alt}
                  class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                  crop="auto"
                  gravity="body:face"
                />
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-center text-white">
                  <p class="font-medium text-center px-4">{image.alt}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Instagram CTA - Clean Flat Design -->
    <div class="mt-16 max-w-4xl mx-auto">
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
        <!-- Content container -->
        <div
          class="p-8 flex flex-col md:flex-row items-center justify-between gap-6"
        >
          <!-- Left side content -->
          <div class="text-left md:max-w-md">
            <div class="mb-3 flex items-center">
              <div
                class="mr-3 h-9 w-9 flex items-center justify-center rounded-lg bg-[#F68712]"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-5 h-5 text-white"
                  ><rect x="2" y="2" width="20" height="20" rx="5" ry="5"
                  ></rect><path
                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                  ></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"
                  ></line></svg
                >
              </div>
              <span class="font-semibold text-gray-900">@bromotour__</span>
            </div>
            <h3 class="text-2xl font-semibold text-gray-900 mb-3">
              Discover more on Instagram
            </h3>
            <p class="text-gray-600 mb-6">
              Follow our Instagram for stunning photos, behind-the-scenes
              content, and exclusive offers only available to our social media
              followers.
            </p>

            <!-- Hashtag cloud -->
            <div class="flex flex-wrap gap-2 mb-6">
              <span
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-md"
                >#BromoSunrise</span
              >
              <span
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-md"
                >#EastJavaAdventure</span
              >
              <span
                class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-md"
                >#IjenCrater</span
              >
            </div>

            <!-- Follow button -->
            <a
              href="https://instagram.com/bromotour__"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-2.5 bg-[#F68712] text-white rounded-md font-medium hover:bg-[#E07000] transition-colors"
            >
              <span>Follow Us</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="w-4 h-4"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>

          <!-- Right side - Simple image placeholder -->
          <div
            class="hidden md:block w-50 bg-gray-100 rounded-md items-center justify-center"
          >
            <div
              class="bg-white rounded border-2 border-gray-200 flex items-center justify-center"
            >
              <CldImage
                src="bromopackage"
                alt="Bromo Tour Package"
                class="object-cover w-full h-full rounded"
                loading="lazy"
                crop="crop"
                gravity="face"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
