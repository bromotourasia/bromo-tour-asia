---
import { Button } from "@/components/ui/button";

// Sample tour package data
const packages = [
  {
    id: 1,
    title: "Bromo Sunrise Tour",
    description: "Experience the breathtaking sunrise over Mount Bromo with this popular 2 Days 1 Night tour package.",
    price: "Rp 700K",
    duration: "2 Days / 1 Night",
    features: ["Transport service", "Jeep ride", "Local guide", "1 Night hotel", "Breakfast"],
    image: "/images/bromo-sunrise.jpg"
  },
  {
    id: 2,
    title: "Bromo & Ijen Crater",
    description: "Combine the beauty of Mount Bromo with the stunning blue flames of Ijen Crater in this 3 Days 2 Nights adventure.",
    price: "Rp 1,150K",
    duration: "3 Days / 2 Night",
    features: ["Transport service", "Jeep ride", "Local guide", "1 Night hotel Surabaya","1 Night hotel Ijen ", "2x Breakfast"],
    image: "/images/bromo-ijen.jpg"
  },
  {
    id: 3,
    title: "Bromo & Sewu Waterfall",
    description: "Visit Mount Bromo and the magnificent Tumpak Sewu waterfall on this comprehensive tour package.",
    price: "Rp 1,150K",
    duration: "3 Days / 2 Nights",
    features: ["Transport service", "Jeep ride", "Local guide", "1 Night hotel Tumpak Sewu","1 Night hotel Surabaya ", "2x Breakfast"],
    image: "/images/tumpak-sewu.jpg"
  },
  {
    id: 4,
    title: "Complete East Java Tour",
    description: "Explore all the highlights of East Java including Bromo, Ijen, and Malang city in this extensive tour.",
    price: "Rp 1,500K",
    duration: "4 Days / 3 Nights",
    features: ["All transportation", "Hotel stays", "Daily breakfast", "Entrance fees"],
    image: "/images/east-java.jpg"
  },
  {
    id: 5,
    title: "Yogyakarta Tour (New)",
    description: "Discover the cultural heart of Java with visits to UNESCO World Heritage sites Borobudur and Prambanan temples, explore Sultan Palace, and experience the vibrant atmosphere of Malioboro Street.",
    price: "-",
    duration: "-",
    features: ["All transportation", "Hotel stays", "Daily breakfast", "Entrance fees"],
    image: "/images/east-java.jpg"
  }
];
---

<section id="packages" class="bg-[#20513F] text-white py-20" aria-label="Tour Packages">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto text-center mb-12 lg:mb-16">
      <p class="inline-block px-3 py-1 text-[#F68712] font-light mb-2 border border-[#F68712] rounded-full bg-white/10">
        Our Tour Packages
      </p>
      <h2 class="text-4xl md:text-5xl font-semibold mb-6">
        Unforgettable Bromo Experiences
      </h2>
      <p class="text-lg font-light text-white/80">
        Choose from our carefully crafted tour packages designed to showcase the best of Bromo and East Java
      </p>
    </div>

    <!-- Package Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {packages.map(pkg => (
        <div class="bg-white text-gray-800 rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
          <div class="h-48 bg-gray-200 relative overflow-hidden">
            <div class="absolute inset-0 bg-gray-400 flex items-center justify-center">
              <p class="text-xs">Package Image</p>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-[#20513F]">{pkg.title}</h3>
            <p class="text-sm text-gray-600 mb-4">{pkg.description}</p>
            <div class="flex justify-between items-center mb-4">
              <div>
                <p class="text-xs text-gray-500">Starting from</p>
                <p class="text-xl font-bold text-[#F68712]">{pkg.price}</p>
              </div>
              <div class="px-3 py-1 bg-[#20513F]/10 text-[#20513F] text-xs rounded-full">
                {pkg.duration}
              </div>
            </div>
            <ul class="text-sm text-gray-600 mb-6">
              {pkg.features.map(feature => (
                <li class="flex items-center gap-2 mb-2">
                  <svg class="w-4 h-4 text-[#F68712]" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <Button className="w-full bg-[#F68712] hover:bg-[#F68712]/90 text-white">
              View Details
            </Button>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-lg mb-6">Can't find what you're looking for? We offer customizable packages too!</p>
      <Button className="bg-white text-[#20513F] hover:bg-white/90" size="lg">
        Contact Us for Custom Tour
      </Button>
    </div>
  </div>
</section>