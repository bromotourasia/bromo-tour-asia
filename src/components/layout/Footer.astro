---
// Import any necessary components
import { Button } from "@/components/ui/button";

// Get current year for copyright
const currentYear = new Date().getFullYear();

// Footer navigation links
const footerLinks = [
  {
    title: "Tours",
    links: [
      { href: "#packages", label: "Bromo Sunrise Tour" },
      { href: "#packages", label: "Bromo & Ijen Crater" },
      { href: "#packages", label: "Bromo & Sewu Waterfall" },
      { href: "#packages", label: "Complete East Java Tour" },
      { href: "#packages", label: "Yogyakarta Tour (New)" }
    ]
  },
  {
    title: "Company",
    links: [
      { href: "#contact", label: "About Us" },
      { href: "#contact", label: "Contact" },
      { href: "#testimonials", label: "Testimonials" },
      { href: "#terms", label: "FAQ" }
    ]
  },
  {
    title: "Legal",
    links: [
      { href: "#terms", label: "Terms of Service" },
      { href: "#terms", label: "Privacy Policy" },
      { href: "#terms", label: "Refund Policy" }
    ]
  }
];

// Social media links
const socialLinks = [
  { platform: "instagram", href: "https://instagram.com/bromotour__", label: "Instagram" },
  { platform: "facebook", href: "https://www.facebook.com/profile.php?id=61563141071150", label: "Facebook" },
  { platform: "tiktok", href: "https://www.tiktok.com/@bromotour__", label: "TikTok" },
  { platform: "telegram", href: "https://t.me/bromotourasia", label: "Telegram" }
];
---

<footer class="bg-white border-t border-gray-200">
  <div class="container mx-auto px-4 py-12 md:py-16">
    <!-- Top section with logo, description and newsletter -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mb-12">
      <!-- Logo and description -->
      <div class="md:col-span-2">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-[#20513F] rounded-md flex items-center justify-center text-white font-bold text-xl mr-2">B</div>
          <span class="text-xl font-semibold text-gray-900">Bromo Tour</span>
        </div>
        <p class="text-gray-600 mb-4 max-w-md">
          Experience the beauty of East Java with our expertly guided tours to Mount Bromo, Ijen Crater, and more. Unforgettable adventures await.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(({ platform, href }) => (
            <a 
              href={href} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="w-8 h-8 rounded-full flex items-center justify-center text-gray-600 hover:text-[#20513F] transition-colors"
              aria-label={platform}
            >
              {platform === "instagram" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
              )}
              {platform === "facebook" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
              )}
              {platform === "tiktok" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              )}
              {platform === "telegram" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4"><path d="M21.198 2.433a2.242 2.242 0 0 0-1.022.215l-8.609 3.33c-2.068.8-4.133 1.598-5.724 2.21a405.15 405.15 0 0 1-2.849 1.09c-.42.147-.99.332-1.473.901-.728.968.193 1.798.919 2.286 1.61.516 3.275 1.009 4.654 1.472.846 1.467 1.767 3.212 2.662 4.827.45.82.78 2.345 1.938 2.458 1.23.117 1.766-.522 2.93-1.737.603-.63 1.174-1.33 1.653-1.918a298.91 298.91 0 0 1 4.63 3.42c.59.421 1.175.847 1.202 1.76.22.886-.226 1.558-.751 1.955-.406.3-.909.396-1.368.396a2.88 2.88 0 0 1-1.078-.132c-.229.616-.285 1.236-.244 1.617.057.52.062 1.12 1.331 1.12.877 0 1.721-.236 2.427-.618a4.891 4.891 0 0 0 2.306-2.622c.154-.495.242-1.02.242-1.571 0-1.342-.425-2.158-1.175-3.003-.313-.35-1.658-1.435-3.119-2.626a84.491 84.491 0 0 1 1.975-3.468c.756-1.28 1.416-2.642 1.446-3.415.02-.531-.238-1.05-.81-1.325a1.59 1.59 0 0 0-.732-.172z"/></svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Contact information -->
      <div>
        <h3 class="font-medium text-sm text-gray-500 uppercase tracking-wider mb-4">Contact Us</h3>
        <div class="space-y-3 text-gray-600">
          <p class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2 text-[#20513F] flex-shrink-0 mt-0.5"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            <span>Arum Permai Residential Area, Probolinggo, East Java, Indonesia</span>
          </p>
          <p class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2 text-[#20513F] flex-shrink-0"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
            <a href="mailto:info@bromotour.com" class="hover:text-[#20513F] transition-colors">bromotourasia@gmail.com</a>
          </p>
          <p class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2 text-[#20513F] flex-shrink-0"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            <a href="https://wa.me/6281234567890" class="hover:text-[#20513F] transition-colors">+62 857-2179-1403</a>
          </p>
        </div>
      </div>
    </div>
    
    <!-- Navigation links -->
    <div class="grid grid-cols-2 sm:grid-cols-3 gap-8 py-8 border-t border-gray-200">
      {footerLinks.map(category => (
        <div>
          <h3 class="font-medium text-sm text-gray-500 uppercase tracking-wider mb-4">{category.title}</h3>
          <ul class="space-y-2">
            {category.links.map(link => (
              <li>
                <a href={link.href} class="text-gray-600 hover:text-[#20513F] transition-colors">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom bar -->
    <div class="pt-8 border-t border-gray-200 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-600 text-sm mb-4 md:mb-0">
        Â© {currentYear} Bromo Tour Asia. All rights reserved.
      </p>
      <div class="flex flex-wrap gap-x-6 gap-y-2">
        <a href="#terms" class="text-sm text-gray-500 hover:text-[#20513F] transition-colors">Terms</a>
        <a href="#terms" class="text-sm text-gray-500 hover:text-[#20513F] transition-colors">Privacy</a>
        <a href="#terms" class="text-sm text-gray-500 hover:text-[#20513F] transition-colors">Cookies</a>
      </div>
    </div>
  </div>
</footer>