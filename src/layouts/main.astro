---
import "../styles/global.css";
import Navbar from "@/components/layout/Navbar.astro";
import Footer from "@/components/layout/Footer.astro";

const { title = "Bromo Tour | Indonesia Travel Packages & Guided Tours", isErrorPage = false } =
  Astro.props;

// JSON-LD for the Travel Agency information
const travelAgencyStructuredData = {
  "@context": "https://schema.org",
  "@type": "TravelAgency",
  name: "Bromo Tour",
  description:
    "Join our group tours and explore Indonesia, including Bromo, Bali, and Yogyakarta. We offer 10+ fun and easy guided trips. Talk to our team and get a free quote today.",
  image: "https://bromotour.asia/images/logo.png",
  url: "https://bromotour.asia",
  telephone: "+6285707307178",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Jl. Yos Sudarso B No.28b",
    addressLocality: "Kota Probolinggo",
    addressRegion: "East Java",
    postalCode: "67217",
    addressCountry: "ID",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: "-7.744495720567781",
    longitude: "113.22846089615636",
  },
  areaServed: [
    "Mount Bromo",
    "Ijen Crater",
    "Tumpak Sewu",
    "Yogyakarta",
    "Bali",
  ],
  priceRange: "$$-$$$",
  openingHoursSpecification: {
    "@type": "OpeningHoursSpecification",
    dayOfWeek: [
      "Monday",
      "Tuesday",
      "Wednesday",
      "Thursday",
      "Friday",
      "Saturday",
      "Sunday",
    ],
    opens: "08:00",
    closes: "18:00",
  },
};

// JSON-LD for the single page structure with multiple sections
const pageStructuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: "Bromo Tour | Indonesia Travel Packages & Guided Tours",
  url: "https://bromotour.asia",
  description:
    "Join our group tours and explore Indonesia, including Bromo, Bali, and Yogyakarta. We offer 10+ fun and easy guided trips. Talk to our team and get a free quote today.",
  hasPart: [
    {
      "@type": "WebPageElement",
      name: "Home Section",
      cssSelector: "#home",
    },
    {
      "@type": "WebPageElement",
      name: "Packages Section",
      cssSelector: "#packages",
    },
    {
      "@type": "WebPageElement",
      name: "Gallery Section",
      cssSelector: "#gallery",
    },
    {
      "@type": "WebPageElement",
      name: "Testimonial Section",
      cssSelector: "#testimonials",
    },
    {
      "@type": "WebPageElement",
      name: "Terms Section",
      cssSelector: "#terms",
    },
    {
      "@type": "WebPageElement",
      name: "Contact Section",
      cssSelector: "#contact",
    },
  ],
};
---

<html lang="en" class="overflow-x-hidden">
  <head>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href="https://bromotour.asia" />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content="Bromo Tour | Indonesia Travel Packages & Guided Tours">
    <meta name="description" content="Join our group tours and explore Indonesia, including Bromo, Bali, and Yogyakarta. We offer 10+ fun and easy guided trips. Talk to our team and get a free quote today.">
    <meta name="keywords" content="Indonesia travel, Indonesia tour, guided tours Indonesia, Indonesia travel packages, tour and travel services Indonesia, best Indonesia tours, Bromo tour, Mount Bromo tour, Yogyakarta tour, Bali tour, Ijen crater tour, Tumpak Sewu waterfall tour, East Java tour packages, Bali travel guide, Yogyakarta travel package, best guided tours in Indonesia, adventure travel in Indonesia, group tours to Mount Bromo and Ijen, sunrise tour Mount Bromo, 3-day Java adventure tour, private Bromo and Ijen tour package, explore Java waterfalls and volcanoes, Bali to Java travel packages, custom Indonesia travel plans, private Indonesia tour guide, local travel agency Indonesia, affordable Indonesia tour packages, book Indonesia group tours">
    <meta name="robots" content="index, follow">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="language" content="English">
    <meta name="revisit-after" content="7 days">
    <meta name="author" content="bromotourasia">

    <script
      type="application/ld+json"
      set:html={JSON.stringify(travelAgencyStructuredData)}
    />

    <script
      type="application/ld+json"
      set:html={JSON.stringify(pageStructuredData)}
    />

    <title>{title}</title>
  </head>

  <body class="overflow-x-hidden">
    <Navbar isNotHomePage={isErrorPage} />
    <main class="overflow-x-hidden">
      <slot />
    </main>
    <Footer />
  </body>
</html>
